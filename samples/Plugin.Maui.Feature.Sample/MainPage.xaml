<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Plugin.Maui.Feature.Sample.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="OCR Plugin">
    <StackLayout Padding="20" Spacing="10">
        <HorizontalStackLayout HorizontalOptions="Center">
            <Switch x:Name="TryHardSwitch" IsToggled="False" Margin="0,0,10,0" />
            <Label Text="Try Hard?" VerticalOptions="Center" />
        </HorizontalStackLayout>
        <Button
            x:Name="OpenFromCameraBtn"
            MaximumHeightRequest="100"
            MaximumWidthRequest="200"
            Clicked="OpenFromCameraBtn_Clicked"
            Text="From Camera .." />
        <Button
            x:Name="OpenFromFileBtn"
            MaximumHeightRequest="100"
            MaximumWidthRequest="200"
            Clicked="OpenFromFileBtn_Clicked"
            Text="From File .." />
        <Label x:Name="ResultLbl" Text="Waiting for results .." HorizontalOptions="Center" MinimumHeightRequest="200" BackgroundColor="{StaticResource White}" />
        <Button
            IsEnabled="False"
            x:Name="ClearBtn"
            Clicked="ClearBtn_Clicked"
            MaximumHeightRequest="100"
            MaximumWidthRequest="200"
            Text="Clear Result" />
    </StackLayout>
</ContentPage>
